{
	"manifest_version": 2,
	"name": "Dutch Translation for Safari",
	"description": "Enables instant, inline translation from NL in Safari",
	"version": "0.0.1",
	"icons": {
		"64": "icons/icon.png"
	},
	"background": {
		"scripts": [
			"shared.js",
			"background.js"
		],
		"persistent": false
	},
	"permissions": [
		"activeTab",
		"tabs",
		"storage",
		"<all_urls>"
	],
	"browser_action": {
		"default_icon": {
			"64": "icons/icon.png"
		},
		"default_popup": "browserAction/index.html",
		"default_title": "Dutch Translation for Safari"
	}
}
